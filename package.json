{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "index.ts",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "client": "npm start --prefix client",
    "server": "nodemon -I --exec node --experimental-specifier-resolution=node  --loader ts-node/esm index.ts",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "copy": "cp -r client/build server",
    "full-build": "npm i && cd ./client && npm i && cd ../ && concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "npm i && cd ./client && npm i && cd ../ --prefix client && npm run build --prefix client && npm run copy"
  },
  "dependencies": {
    "@types/node": "^18.7.14",
    "axios": "^0.27.2",
    "concurrently": "^7.2.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "heroku": "^7.60.2",
    "mongoose": "^6.5.2",
    "nodemon": "^2.0.19",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/mongoose": "^5.11.97",
    "eslint-plugin-react-hooks": "^4.6.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.2"
  }
}
