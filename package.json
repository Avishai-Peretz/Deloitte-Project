{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "client": "npm start --prefix client",
    "server": "nodemon index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "copy": "cp -r client/build server",
    "full-build": "npm install && cd ./server && npm i && cd ../client && npm install && cd ../ && concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "npm install && cd ./server && npm i && cd ../client && npm install && cd ../ --prefix client && npm run build --prefix client && npm run copy"
  },
  "dependencies": {
    "@heroku-cli/plugin-buildpacks": "^7.60.0",
    "@heroku/buildpack-registry": "^1.0.1",
    "@splidejs/react-splide": "^0.7.8",
    "axios": "^0.27.2",
    "concurrently": "^7.2.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "heroku": "^7.60.2",
    "mongoose": "^6.5.2",
    "nodemon": "^2.0.19",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "eslint-plugin-react-hooks": "^4.6.0",
    "typescript": "^4.7.4"
  }
}
